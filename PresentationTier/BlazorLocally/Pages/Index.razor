@page "/"
@using System.Security.Claims
@using Components
@inject NavigationManager NavManager

<AuthorizeView Roles="customer">
    <Authorized>
       @{ NavManager.NavigateTo("/DisplayOffers");}
    </Authorized>
</AuthorizeView>
<AuthorizeView Roles="farmer">
    <Authorized>
        @{ NavManager.NavigateTo("/DisplayFarms");};
    </Authorized>
</AuthorizeView> 
<AuthorizeView Roles="admin">
    <Authorized>
        @{ NavManager.NavigateTo("/AdminReportedOffers");};
    </Authorized>
</AuthorizeView> 
