@page "/FarmerOrderView"
@attribute [Authorize(Roles = "farmer")] 

@using global::Shared.Models
@using HttpClient.ClientInterfaces
@inject IOrderService orderService
@inject IUserService userService

    <div class="title">
        <h1>Orders</h1>
    </div>
    @if (orders == null)
    {
        <span>Loading..</span>
    }
    else if (orders.Any())
    {
        @if (deliveryOrders.Any())
        {
            <div class="orders">
                <label>Delivery</label>
                <div class="ordersTable">
                    @foreach (var order in pickUpOrders)
                    {
                        <div class="rowDiv">
                            <div class="customerNameCell">@order.OrderOffers.First().Username</div>
                            <div class="cityCell">@customers[order.OrderOffers.First().Username].Address?.City</div>
                            <div class="priceCell">@TotalPrice(order.OrderOffers) dkk</div>
                            <div class="imgCell" onclick="this.parentElement.classList.toggle('details')">
                                <img src="Img/downArrow.png">
                            </div>
                        </div>
                            <Table class="detailTable">
                            <th class="AddressRow">
                                @customers[order.OrderOffers.First().Username].Address?.ToString()
                            </th>
                            @foreach (var item in order.OrderOffers)
                            {
                                <tr>
                                    <td>@item.Offer.Name</td>
                                    <td class="QuantityCell">@item.Quantity</td>
                                    <td><button class="btn btn-danger" @onclick="() => DeleteOrder(@item.Id)" >DELETE</button></td>
                                </tr>
                            }
                        </Table>
                        }
                </div>
            </div>
        }
        @if (pickUpOrders.Any())
        {
            <div class="orders">
                <label>Pick up</label>
                <div class="ordersTable">
                    @foreach (var order in deliveryOrders)
                    {
                        <div class="rowDiv">
                            <div class="nameCell">@order.OrderOffers.First().Username</div>
                            <div class="phoneCell">@customers[order.OrderOffers.First().Username].Phone</div>
                            <div class="priceCell">@TotalPrice(order.OrderOffers) dkk</div>
                            <div class="imgCell" onclick="this.parentElement.classList.toggle('details')">
                                <img src="Img/downArrow.png">
                            </div>
                        </div>
                        <Table class="detailTable">
                            <th></th>
                            @foreach (var item in order.OrderOffers)
                            {
                                <tr>
                                    <td>@item.Offer.Name</td>
                                    <td class="QuantityCell">@item.Quantity</td>
                                    <td><button class="btn btn-danger" @onclick="() => DeleteOrder(@item.Id)" >DELETE</button></td>
                                </tr>
                            }
                        </Table>
                    }
                </div>
            </div>
        }
    }



@code {
    private IEnumerable<Order>? orders;
    private List<Order> deliveryOrders = new List<Order>();
    private List<Order> pickUpOrders = new List<Order>();
    private string msg = "";
    private string username;
    private Dictionary<string,Customer> customers = new ();
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            
            orders = await orderService.GetAllOrdersAsync();
            if (orders != null)
            {
                List<string> customersUsername = new();
                
                foreach (var order in orders)
                {
                    customersUsername.Add(order.OrderOffers.First().Username);
                }
                foreach (var customerUsername in customersUsername)
                {
                    if (!customers.ContainsKey(customerUsername))
                    { 
                        Customer customer = await userService.GetCustomer(customerUsername);
                        customers.Add(customerUsername,customer);
                    }
                }
            }
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }

        if (orders != null)
        {
            foreach (var order in orders)
            {
                if (order.CollectionOption.Equals("Delivery"))
                {
                    deliveryOrders.Add(order);
                }
                else if(order.CollectionOption.Equals("PickUp"))
                {
                    pickUpOrders.Add(order);
                }
            }

        }
    }

    private double TotalPrice(List<OrderOffer> items)
    {
        double totalPrice = 0;
        for (int i = 0; i < items.Count; i++)
        {
            totalPrice += items[i].Quantity * items[i].Offer.Price;
        }

        return totalPrice;
    }
    
    private void DeleteOrder(int id)
    {
        orderService.DeleteOrderAsync(id);
    }


}