            ZIP = "8700",
        };
        Farm farm = new Farm
        {
            Address = address,
            DeliveryDistance = 15,
            Name = "HappyFarm",
            Phone = "+4582785463"
        };

        return farm;
    }

    private double TotalPrice(List<OrderOffer> items)
    {
        double totalPrice = 0;
        for (int i = 0; i < items.Count; i++)
        {
            totalPrice += items[i].Quantity * items[i].Offer.Price;
        }

        return totalPrice;
    }


}