@using BlazorLocally.Pages
@namespace Components

<div class="card col-5 m-3">
    <div class="card-header">
        <img src="@ImageUrl" alt="offerImage"/>
    </div>
    <div class="card-body d-flex justify-content-between flex-wrap">
        <h5 class="col-8">@Name</h5>
        <h6 class="col-4 d-flex justify-content-end">Price: @Price dkk</h6>
        <span class="col-8">@Description</span>
    </div>
    
    @if (DisplayButton)
    {
        <button type="button" @onclick="OnClick"> Add 
        </button>
    }
</div>


@code {
    [Parameter]
    public string ImageUrl { get; set; }
    
    [Parameter]
    public string Name { get; set; }
    
    [Parameter]
    public string Description { get; set; }
    
    [Parameter]
    public double Price { get; set; }
    
    [Parameter]
    public Action OnClick { get; set; }
    
    [Parameter]
    public bool DisplayButton { get; set; }


}